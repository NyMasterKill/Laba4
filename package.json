{
  "name": "laba4-backend",
  "version": "1.0.0",
  "description": "Backend for Laba4 project",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/config/typeorm.config.ts migration:generate",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/config/typeorm.config.ts migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d ./src/config/typeorm.config.ts migration:revert"
  },
  "keywords": [
    "typeorm",
    "postgres",
    "typescript"
  ],
  "author": "NyMasterKill",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^20.0.0",
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.11.0",
    "ts-node": "^10.9.0",
    "typeorm": "^0.3.17",
    "typescript": "^5.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.6.0",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/*spec.ts",
      "**/*test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!src/**/*.d.ts"
    ],
    "moduleNameMapping": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ]
  }
}
